[global]
    font = FiraCode Nerd Font 10

    allow_markup = yes
    format = "%s\n%b"

    sort = yes
    indicate_hidden = yes
    alignment = left
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no

    geometry = "300x10-10+48"
    transparency = 20

    # border
    frame_width = 1

    idle_threshold = 120
    monitor = 0
    follow = mouse
    sticky_history = yes
    line_height = 5
    separator_height = 0

    padding = 20
    horizontal_padding = 10

    separator_color = #ccc
    corner_radius = 0

    startup_notification = false
    show_indicators = no

    dmenu = /usr/bin/dmenu -p dunst
    browser = /usr/bin/firefox -new-tab

    # event handlers
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all


[frame]
    color = "#000000"
    width = 0

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    context = ctrl+shift+period
    history = ctrl+shift 

[urgency_low]
    background = "#000000"
    foreground = "#cccccc"
    timeout = 5
    format = "<b>%s</b>\n%b"

[urgency_normal]
    background = "#000000"
    foreground = "#cccccc"
    timeout = 5
    format = "<b>%s</b>\n%b"

[urgency_critical]
    background = "#000000"
    foreground = "#cccccc"
    timeout = 5
    format = "<b>%s</b>\n%b"

[Discord]
    appname = Discord Canary
    format = "<b>%s</b>\n%b"

[WMail]
    appname = Electron
    format = "<b>%s</b>\n%b"
    timeout = 2000

[Spotify]
    appname = Spotify
    format = "<b>Now Playing:</b>\n%s\n%b"
    timeout = 10
